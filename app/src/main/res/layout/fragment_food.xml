<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#f0f0f0">


    <ImageView
        android:id="@+id/rest_background_pic"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:background="@drawable/rest_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
       />
    <TextView
        android:id="@+id/browse_banner"
        android:layout_width="220dp"
        android:layout_height="190dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingVertical="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="-15dp"
        android:paddingLeft="20dp"
        android:lines="2"
        android:background="@drawable/food_home_image"
        />


    <Button
        android:id="@+id/back_button"
        android:layout_width="21dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/left_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/restaurant_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nandos"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="100dp"/>
    <TextView
        android:id="@+id/restaurant_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add items to your order"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/restaurant_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"/>
<!-->
    <TextView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/restaurant_title"
        android:layout_marginTop="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"/>
</!-->
    <androidx.recyclerview.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/food_recView"
        android:layout_marginTop="200dp"
        >
    </androidx.recyclerview.widget.RecyclerView>




</androidx.constraintlayout.widget.ConstraintLayout>
