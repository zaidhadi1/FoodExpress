<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f0f0"
    tools:context=".fragment.user.LoginFragment">

    <Button
        android:id="@+id/back_button_createAccount"
        android:layout_width="21dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/back_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/create_your_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Create your Account "
        android:textColor="#ff6b12"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/new_email_label"
        />

    <TextView
        android:id="@+id/register_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_marginTop="10dp"
        android:text="Register with email and sign up to continue \nusing our app. "
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/new_email_label"
        app:layout_constraintLeft_toLeftOf="@id/new_email_label"
        app:layout_constraintTop_toBottomOf="@id/create_your_account" />

    <TextView
        android:id="@+id/new_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textSize="15sp"
        android:text="Email"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/register_info"
        app:layout_constraintLeft_toLeftOf="@id/new_email"
        android:layout_marginTop="70dp"/>

    <EditText
        android:id="@+id/new_email"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/username_input"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/new_email_label"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="6dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/new_password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textSize="15sp"
        android:text="Password"
        android:layout_marginTop="6dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/new_email"
        app:layout_constraintLeft_toLeftOf="@id/new_email"
        />
    <EditText
        android:id="@+id/new_password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/username_input"
        app:layout_constraintTop_toBottomOf="@id/new_password_label"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="6dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/confirm_password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textSize="15sp"
        android:text="Confirm Password"
        android:layout_marginTop="6dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/new_password"
        app:layout_constraintLeft_toLeftOf="@id/new_email" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/username_input"
        app:layout_constraintTop_toBottomOf="@id/confirm_password_label"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/new_email"
        android:layout_marginTop="6dp"
        android:padding="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/submit_login_button"
        android:text="Register"
        android:textSize="15dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/confirm_password"
        app:layout_constraintLeft_toLeftOf="@id/new_email"
        android:padding="10dp"
        android:layout_marginTop="60dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>

